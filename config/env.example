API_URL=wss://iqoption.com/echo/websocket
ACCESS_TOKEN=82
LOGIN_URL=https://api.iqoption.com

# Login credentials for IQ Option
LOGIN_EMAIL=your-email@example.com
LOGIN_PASSWORD=your-password

# Maximum number of trade cycles
MAX_TRADE_CYCLES=1

# Trading Configuration
IS_DEMO=true  # Set to true for demo balance, false for real balance

# ------------------------------------------------------------
# Technical Analysis Configuration
# ------------------------------------------------------------


# Price History Configuration
# Maximum number of price points to keep in memory
PRICE_HISTORY_LENGTH=300
# Minimum price points needed before trading
MIN_PRICE_HISTORY_LENGTH=100


# Indicator Weights (must sum to 1.0)
# Higher weight = more influence on trading decisions
INDICATOR_WEIGHT_EMA=0.3
INDICATOR_WEIGHT_RSI=0.2
INDICATOR_WEIGHT_MACD=0.2
INDICATOR_WEIGHT_BOLLINGER=0.15
INDICATOR_WEIGHT_STOCHASTIC=0.15

# Decision Thresholds
# UPPER: Increase for fewer BUY trades (e.g., 0.3 = more conservative)
# LOWER: Decrease for fewer SELL trades (e.g., -0.3 = more conservative)
DECISION_THRESHOLD_UPPER=0.2
DECISION_THRESHOLD_LOWER=-0.2

# Minimum confidence required to place a trade
# Higher value (e.g., 0.6) = more conservative, fewer trades
# Lower value (e.g., 0.2) = more aggressive, more trades
# Range: 0.0 to 1.0 (0% to 100% confidence)
MIN_CONFIDENCE_THRESHOLD=0.4

# Position Monitoring Configuration
# Minimum profit threshold as a decimal (e.g., 0.05 = 5% profit)
MIN_PROFIT_THRESHOLD=0.25